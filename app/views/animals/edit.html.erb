<h1>Edit Species</h1>

<% if @animal.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @animal.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/animals/<%= @animal.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="animal">Species name</label>
  <input id="animal_name" name="name" type="text" value="<%= @animal.name %>">
  <button>Edit Species</button>
</form>